    <properties>
        <!-- 文件拷贝时的编码 -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <!-- 编译时的编码 -->
        <maven.compiler.encoding>UTF-8</maven.compiler.encoding>

        <dev.spring.version>4.1.6.RELEASE</dev.spring.version>

        <dev.cglib.version>2.2</dev.cglib.version>

        <dev.slf4j.api.versoin>1.6.1</dev.slf4j.api.versoin>
        <dev.jcl.over.slf4j>1.7.7</dev.jcl.over.slf4j>
        <dev.log4j.version>1.2.16</dev.log4j.version>
        <dev.slf4j.log4j12.version>1.7.5</dev.slf4j.log4j12.version>
        <dev.logback.version>1.1.2</dev.logback.version>
        <dev.servlet.api>2.5</dev.servlet.api>

        <dev.jackson.version>2.4.4</dev.jackson.version> <!--spring 响应 json 会用到 -->

        <dev.jsp.version>2.1</dev.jsp.version>
        <dev.servlet.api.version>3.1.0</dev.servlet.api.version>

        <!--spring -orm  -->
        <dev.druid.version>1.0.8</dev.druid.version>
        <dev.mysql.version>5.1.36</dev.mysql.version>
        <dev.mybatis.version>3.2.3</dev.mybatis.version>
        <dev.spring.mybatis.version>1.2.2</dev.spring.mybatis.version>
        <dev.mybatis.pagehelper>3.7.4</dev.mybatis.pagehelper>

        <!-- spring-nosql -->
        <redis.clients.version>2.1.0</redis.clients.version>
        <dev.xmemcached.version>2.0.0</dev.xmemcached.version>
        <dev.spring.data.redis.version>1.5.1.RELEASE</dev.spring.data.redis.version>
        <dev.redis.clients.version>2.7.2</dev.redis.clients.version>

        <!-- spring webmvc -->
        <dev.jstl.version>1.2</dev.jstl.version>
        <dev.standard.version>1.1.2</dev.standard.version>

        <dev.velocity.version>1.7</dev.velocity.version>
        <dev.velocity.tools.version>2.0</dev.velocity.tools.version>
        <dev.reflow.velocity.tools>1.0.0</dev.reflow.velocity.tools>
        <dev.commons.digester>1.8</dev.commons.digester>
        <dev.commons.collections>3.2.1</dev.commons.collections>

        <!--tools -->
        <dev.mybatis.generator.core>1.3.2</dev.mybatis.generator.core>
        <dev.fastjson.version>1.1.36</dev.fastjson.version>

        <dev.dubbo.version>2.5.3</dev.dubbo.version>
        <dev.zookeeper.version>3.4.6</dev.zookeeper.version>
        <dev.zkclient.version>0.1</dev.zkclient.version>

        <!--quartz tbschedule -->
        <dev.quartz.version>2.2.1</dev.quartz.version>
        <dev.tbschedule.version>3.2.18</dev.tbschedule.version>
        <dev.zkclient.version>0.4</dev.zkclient.version>

    </properties>


    <dependencyManagement>
        <dependencies>
            <!-- zkclient -->
            <dependency>
                <groupId>com.101tec</groupId>
