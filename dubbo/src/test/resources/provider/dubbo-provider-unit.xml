<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="dubbo-service-provider"/>

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="127.0.0.1:2181"/>

    <!-- 多协议配置 -->
    <!--<dubbo:protocol name="rmi" port="8088" />-->
    <!--<dubbo:protocol name="hessian" port="8080" />-->
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880"/>


    <!-- 使用dubbo, hessian 多协议暴露服务 -->
    <dubbo:service interface="com.dubbo.service.HelloService" ref="helloService" protocol="dubbo" version="1.0.0"/>

    <!-- 和本地bean一样实现服务 -->
    <bean id="helloService" class="com.dubbo.service.impl.HelloServiceImpl"/>

    <dubbo:provider filter="authFilter"/>

</beans>