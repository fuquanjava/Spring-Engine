<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans

       http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">
    <!-- handlerMapping -->
    <bean class="org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping" >
        <property name="interceptors">
            <list>
                <ref bean="handlerInterceptor1"></ref>
                <ref bean="handlerInterceptor2"></ref>
            </list>
        </property>

    </bean>

    <!-- HandlerAdapter -->
    <bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter" />

    <!-- 处理器 -->
    <bean name="/hello" class="webapp.HelloController"/>
   <!-- 无效的 : <bean name="hello2" class="webapp.HelloController"/>-->

    <!-- 拦截器 -->
    <bean name = "handlerInterceptor1" class="webapp.controller.interceptor.HandlerInterceptor1" />
    <bean name = "handlerInterceptor2" class="webapp.controller.interceptor.HandlerInterceptor2" />


    <!-- ViewResolver -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

</beans>
